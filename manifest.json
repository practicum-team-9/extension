{
    "manifest_version": 3,
    "name": "9 Ya Forms Accessibility",
    "version": "1.0",
    "description": "Making forms accessible by restructuring the forms.",
    "icons": {
        "16": "logo16.png",
        "32": "logo32.png",
        "48": "logo48.png",
        "128": "logo128.png" 
    },
    "permissions": ["activeTab", "scripting", "tts"],
    "host_permissions": ["https://forms.yandex.ru/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Ya Forms Accessibility",
        "default_popup": "defaultPopup.html"
    },
    "content_scripts": [
    {
        "matches": ["https://forms.yandex.ru/*"],
        "js": ["mainScript.js"]
    }
    ],
    "web_accessible_resources" : [
        {
            "resources": ["assets/State=Default.png"],
            "matches": ["https://forms.yandex.ru/*"]
        }
    ]
}
